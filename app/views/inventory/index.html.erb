<div class="container">
  <div class="row">
      
      <% count = 0 %>
      
      <% @products.each do |product| %>
      
        <div class="col-md-3">
          <%= render partial: "product_teaser", locals: {product: product} %>
        </div>
        
        <% if count > 2 %>
          </div>
          <div class="row">
          <% count = 0 %>
        <% else %>
          <% count += 1 %>
        <% end %>
        
      <% end %>
      
      
      </div>
      
      
  </div>
</div>